{{page-title "Favorite"}}
<div class="page">
    <h1 class="title"> Favorite </h1>
    {{#each-in @model as |category artworks|}}
    <article class="panel is-primary">
        <p class="panel-heading">{{category}}</p>
        <div class="grid panel-block">
            {{#each artworks as |artwork|}}
            <div class="cell">
                <LinkTo @route="artwork-details" @model={{artwork}}>{{artwork.title}}</LinkTo> <br>
                <img src="https://www.artic.edu/iiif/2/{{artwork.image_id}}/full/843,/0/default.jpg" alt="" width="50"
                    height="50" />
            </div>
            {{/each}}
        </div>
    </article>
    {{/each-in}}
</div>
{{outlet}}